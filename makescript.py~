def make_script(fname):
    f = open(fname, 'w')

    x1 = 250
    y1 = 500
    x2 = 350
    y2 = 250
    z = 250

    while x2 > 300:
        f.write('line\n{} {} 250 {} {} {}\n'.format(x1, y1, x2, y2, z))
        x2 -= 1
        z += 1

    f.write('display\n')
    f.write('rotate\nz 20\n')
    f.write('rotate\nx 180\n')
    f.write('rotate\ny 20\n')
    f.write('display\n')
    f.close()
